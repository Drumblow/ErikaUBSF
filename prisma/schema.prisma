generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           String       @id @default(cuid())
  email        String       @unique
  nome         String
  senha        String
  cargo        String
  criadoEm     DateTime     @default(now())
  atualizadoEm DateTime     @updatedAt
  cronogramas  Cronograma[]

  @@map("usuarios")
}

model Cronograma {
  id           String      @id @default(cuid())
  mes          Int
  ano          Int
  nomeUBSF     String?
  enfermeiro   String?
  medico       String?
  usuarioId    String      // Tornou-se obrigat√≥rio
  usuario      Usuario     @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  atividades   Atividade[]
  criadoEm     DateTime    @default(now())
  atualizadoEm DateTime    @updatedAt

  @@map("cronogramas")
}

model Atividade {
  id           String     @id @default(cuid())
  cronogramaId String
  data         DateTime
  diaSemana    String
  descricao    String
  criadoEm     DateTime   @default(now())
  cronograma   Cronograma @relation(fields: [cronogramaId], references: [id], onDelete: Cascade)

  @@unique([cronogramaId, data, diaSemana, descricao], name: "unique_activity_per_description")
  @@map("atividades")
}
