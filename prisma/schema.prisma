generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           String      @id @default(cuid())
  email        String      @unique
  nome         String
  senha        String      // Ser√° armazenada com hash
  cargo        String      // ex: "enfermeiro", "medico", "admin"
  cronogramas  Cronograma[]
  criadoEm     DateTime    @default(now())
  atualizadoEm DateTime    @updatedAt

  @@map("usuarios")
}

model Cronograma {
  id           String      @id @default(cuid())
  mes          Int         // 1-12
  ano          Int
  nomeUBSF     String?
  enfermeiro   String?
  medico       String?
  usuarioId    String
  usuario      Usuario     @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  atividades   Atividade[]
  criadoEm     DateTime    @default(now())
  atualizadoEm DateTime    @updatedAt

  @@map("cronogramas")
}

model Atividade {
  id           String     @id @default(cuid())
  cronogramaId String
  cronograma   Cronograma @relation(fields: [cronogramaId], references: [id], onDelete: Cascade)
  data         DateTime
  diaSemana    String
  descricao    String
  criadoEm     DateTime   @default(now())

  @@unique([cronogramaId, data, diaSemana, descricao], name: "unique_activity_per_description")
  @@map("atividades")
}