{
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/cronogramas/[id]/pdf.js": {
      "maxDuration": 60,
      "memory": 1600
    },
    "api/cronogramas/[id]/pdf-puppeteer.js": {
      "maxDuration": 60,
      "memory": 1600,
      "excludeFiles": [
        "node_modules/puppeteer/**",
        "node_modules/@types/**",
        "node_modules/jest/**",
        "node_modules/supertest/**",
        "tests/**",
        "scripts/**",
        "prisma/migrations/**",
        ".git/**",
        "*.md",
        "*.test.js"
      ]
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://erika-frontend.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    }
  ]
}